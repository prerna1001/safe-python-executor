FROM python:3.11-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    clang \
    git \
    libseccomp-dev \
    libprotobuf-dev \
    protobuf-compiler \
    libnl-3-dev \
    libnl-genl-3-dev \
    libnl-route-3-dev \
    pkg-config \
    flex \
    bison \
    python3-dev \
    && rm -rf /var/lib/apt/lists/*

# Clone and build nsjail (stable commit with working build)
RUN git clone --recursive https://github.com/google/nsjail.git /opt/nsjail && \
    cd /opt/nsjail && \
    git fetch --all && \
    git checkout 90171fa06d3cb29e0122a37bb884fefabf2f82a && \
    make && \
    cp nsjail /usr/local/bin/nsjail

WORKDIR /app

# Copy your app code
COPY app/ /app
COPY nsjail/nsjail.cfg /app/nsjail.cfg
COPY scripts/ /scripts
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Run your Python app
CMD ["python", "main.py"]
